{
    "name": "web",
    "private": true,
    "description": "",
    "license": "",
    "sideEffects": false,
    "scripts": {
        "start": "cross-env NODE_ENV=production netlify dev",
        "dev": "cross-env NODE_ENV=development netlify dev",
        "local:all": "run-p css:dev remix:dev",
        "build": "npm run css:build && remix build",
        "remix:dev": "remix watch",
        "css:dev": "postcss **/*.css --dir app/styles -w",
        "css:build": "postcss **/*.css --dir app/styles --env production",
        "netlify": "netlify deploy --build"
    },
    "dependencies": {
        "@netlify/functions": "latest",
        "@remix-run/netlify-edge": "experimental-netlify-edge",
        "@remix-run/react": "experimental-netlify-edge",
        "@remix-run/server-runtime": "experimental-netlify-edge",
        "@tiptap/core": ">=2.0.0-beta.1 <3.0.0",
        "@tiptap/extension-document": "^2.0.0-beta.17",
        "@tiptap/extension-link": "^2.0.0-beta.43",
        "@tiptap/extension-placeholder": "^2.0.0-beta.53",
        "@tiptap/react": "^2.0.0-beta.114",
        "@tiptap/starter-kit": "^2.0.0-beta.191",
        "cross-env": "^7.0.3",
        "isbot": "^3.4.6",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "showdown": "^2.1.0"
    },
    "devDependencies": {
        "@babel/core": ">=7.13.0 <8.0.0",
        "@babel/preset-env": "^7.1.6",
        "@remix-run/dev": "experimental-netlify-edge",
        "@remix-run/eslint-config": "experimental-netlify-edge",
        "@remix-run/serve": "experimental-netlify-edge",
        "@tailwindcss/typography": "^0.5.4",
        "@types/react": "^18.0.5",
        "@types/react-dom": "^18.0.1",
        "@types/showdown": "^2.0.0",
        "autoprefixer": "^10.4.8",
        "concurrently": "^7.3.0",
        "cssnano": "^5.1.13",
        "eslint": "^8.11.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.16",
        "postcss-cli": "^10.0.0",
        "tailwindcss": "^3.1.8",
        "typescript": "^4.5.5"
    },
    "engines": {
        "node": ">=14"
    }
}
